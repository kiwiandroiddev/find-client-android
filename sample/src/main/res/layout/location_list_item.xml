<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/locationName"
        tools:text="Location Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textStyle="normal|bold"
        android:textColor="#212121"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/labelGrpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group:"
        android:layout_below="@id/locationName"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/fieldGrpName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="group"
        android:layout_below="@id/locationName"
        android:layout_toEndOf="@id/labelGrpName"
        android:layout_marginStart="16dp"
        android:textColor="#1565C0" />

    <TextView
        android:id="@+id/labelUsrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User:"
        android:layout_below="@id/locationName"
        android:layout_toEndOf="@id/fieldGrpName"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/fieldUsrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="user"
        android:layout_below="@id/locationName"
        android:layout_toEndOf="@id/labelUsrName"
        android:layout_marginStart="16dp"
        android:textColor="#1565C0" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/labelUsrName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

</RelativeLayout>